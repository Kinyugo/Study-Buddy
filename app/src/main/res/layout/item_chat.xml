<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/chat_common_spacing">
    
    <ImageView
        android:id="@+id/item_chat_profile_image"
        android:layout_width="@dimen/chat_profile_image_dimens"
        android:layout_height="@dimen/chat_profile_image_dimens"
        android:src="@drawable/ic_person_placeholder"
        android:background="@drawable/circular_profile_img"
        android:contentDescription="@string/profile_image_description" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_home_common_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_chat_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_chats"
                    android:textColor="@color/gray_900"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_chat_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chat_common_spacing"
                    android:text="@string/title_chats"
                    android:textColor="@color/gray_900"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_chat_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/chat_common_spacing"
                android:text="@string/title_chats" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/chat_common_spacing"
            android:gravity="center">

            <TextView
                android:id="@+id/item_chat_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_image_description" />

            <TextView
                android:id="@+id/item_chat_chats_count"
                android:layout_width="@dimen/chat_count_dimens"
                android:layout_height="@dimen/chat_count_dimens"
                android:layout_marginStart="@dimen/chat_common_spacing"
                android:background="@drawable/circular_chats_count"
                android:gravity="center"
                android:padding="@dimen/chat_count_padding"
                android:text="@string/chat_count_placeholder"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/chat_common_spacing"
            android:background="@color/gray_100" />

    </LinearLayout>

</LinearLayout>